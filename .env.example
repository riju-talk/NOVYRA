# ============================================================
# NOVYRA — Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# ---- Google Gemini (LLM) ----
GOOGLE_API_KEY=your_google_api_key_here
LLM_MODEL=gemini-1.5-flash
LLM_TEMPERATURE=0.3

# ---- Neo4j Knowledge Graph ----
# When running via docker-compose, use the service name:
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=novyra_neo4j
# Neo4j Browser: http://localhost:7474

# ---- PostgreSQL (Prisma) ----
DATABASE_URL=postgresql://user:password@host:5432/novyra?schema=public
DIRECT_URL=postgresql://user:password@host:5432/novyra?schema=public

# ---- NextAuth (frontend) ----
NEXTAUTH_URL=http://localhost:5000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ---- OAuth ----
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---- Internal auth token (Next.js → AI Engine) ----
NEXT_PUBLIC_AI_BACKEND_TOKEN=your_internal_token_here

# ---- Debug ----
DEBUG=false
